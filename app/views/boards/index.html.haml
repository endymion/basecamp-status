- @curRow = 0
- @grayBG = false
- unless @todos.nil?
  - @todos.get_todos(p).each do |todo|
    - if @grayBG
      - @grayBG = false
      - @style = "background-color: #F0F0F0;"
    - else
      - @grayBG = true
      - @style = "background-color: white;"
    %tr{:style => @style}
      %td.tableListElement
        = todo.venue
      %td.tableListElement
        = todo.event
      %td.tableListElement
        EventDate
      %td.tableListElement
        = todo.todo_list
      %td.tableListElement
        = todo.todo_item
      %td.tableListElement
        = todo.due_date
      %td.tableListElement
        = todo.asigned_to
    - @curRow += 1